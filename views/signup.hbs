
	

<section id="form"><!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-4 col-xs-offset-2 ">
				<div class="login-form"><!--login form-->
					<h2 class="text-center">Đăng ký tài khoản của bạn</h2>
					{{#if errors}}
						{{#each errors}}
							<div class="alert alert-danger">{{msg}}</div>
						{{/each}}
					{{/if}}
					<form action="#" method="post">
						<input type="text" placeholder="Tên đăng nhập" name="username" id="username"/>
						
						<input type="text" placeholder="Họ tên" name="name" id="name"/>
						<input type="password" placeholder="Mật khẩu" name="password" id="password"/>
						<input type="password" placeholder="Xác nhận mật khẩu" name="confirm_password" id="confirm_password"/>
						<input type="text" placeholder="Số điện thoại" name="numberphone" id="numberphone"/>
						<input type="text" placeholder="Địa chỉ" name="address" id="address"/>
						<input type="email" placeholder="Email" name="email" id="email"/>
						
						
						<button type="submit" class="btn btn-default center-block">Đăng ký</button>
					</form>
				</div><!--/login form-->
			</div>
		</div>
	</div>
</section><!--/form-->


   